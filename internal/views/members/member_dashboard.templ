package members

import "lms/internal/models"
import "fmt"

templ MembersDashboard(data *models.MemberDashboard) {
	<div>
		<section class="grid">
			<a role="button" href="/members/add">عضو جدید</a>
			<a role="button" href="/members/search">جستوجو</a>
		</section>
		<section class="grid">
			<article>
				<header>
					تعداد کل اعضا
				</header>
				<strong>
					{ data.TotalMembers }
				</strong>
			</article>
			<article>
				<header>
					تعداد اعضای فعال
				</header>
				<strong>
					{ data.TotalActiveMembers }
				</strong>
			</article>
			<article>
				<header>
					تعداد اعضای معلق
				</header>
				<strong>
					{ data.TotalSuspendedMember }
				</strong>
			</article>
		</section>
		<section>
			<article>
				<header>
					فعال‌ترین اعضا
				</header>
				<ul>
					for _, m := range data.ActiveMembers {
						<li>
							<a href={ fmt.Sprintf("/members/%d", m.ID) }>{ m.FullName }</a>
						</li>
					}
				</ul>
			</article>
		</section>
	</div>
}
