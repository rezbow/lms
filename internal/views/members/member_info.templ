package members

import "lms/internal/models"
import "fmt"
import "lms/internal/views/common"

templ MemberInfo(member *models.Member) {
	<div>
		<section>
			<nav>
				<ul>
					<h1>{ member.FullName }</h1>
				</ul>
				<ul>
					<li>
						<a role="button" href={ fmt.Sprintf("/members/%d/addloan", member.ID) }>
							Add Loan
						</a>
					</li>
					<li>
						<a role="button" href={ fmt.Sprintf("/members/%d/edit", member.ID) }>
							Edit Member
						</a>
					</li>
					<li>
						@common.PostButton("Delete", fmt.Sprintf("/members/%d/delete", member.ID))
					</li>
				</ul>
			</nav>
		</section>
		<hr/>
		<section class="grid">
			<section>
				<h6>Phone Number</h6>
				<p>{ member.PhoneNumber }</p>
			</section>
			<section>
				<h6>Email</h6>
				<p>{ member.Email }</p>
			</section>
			<section>
				<h6>National Id</h6>
				<p>{ member.NationalId }</p>
			</section>
			<section>
				<h6>Status</h6>
				<p>{ member.Status }</p>
			</section>
			<section>
				<h6>Join Date</h6>
				<p>{ member.JoinedAt.Format("2006-01-02") } </p>
			</section>
		</section>
		<hr/>
	</div>
}
