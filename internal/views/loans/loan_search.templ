package loans

import "lms/internal/models"
import "lms/internal/views/common"
import "lms/internal/views"

templ LoanSearch(loans []models.Loan, data *views.SearchData) {
	<div>
		<form
			role="search"
			method="GET"
			action="/loans/search"
		>
			<input name="q" type="search" placeholder="Search" value={ data.Term }/>
			<input type="submit" value="Search"/>
		</form>
		<div id="results">
			@LoanList(loans, data)
		</div>
		@common.Pagination(data)
	</div>
}
