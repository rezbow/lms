package books

import "lms/internal/models"

import "lms/internal/views/common"
import "lms/internal/views"

templ BookSearch(books []models.Book, data *views.SearchData) {
	<div>
		<h1>Book Search</h1>
		<form
			role="search"
			method="GET"
			action="/books/search"
		>
			<input name="q" type="search" placeholder="Search"/>
			<input type="submit" value="Search"/>
		</form>
		<div id="results">
			@BookList(books, data)
		</div>
		@common.Pagination(data)
	</div>
}
